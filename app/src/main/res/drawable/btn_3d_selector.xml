<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Saat tombol ditekan -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Efek Bayangan Lebih Gelap -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="16dp"/>
                    <solid android:color="#78909C"/> <!-- Warna Gelap Saat Ditekan -->
                </shape>
            </item>

            <!-- Efek Tekan -->
            <item android:top="2dp">
                <shape android:shape="rectangle">
                    <corners android:radius="16dp"/>
                    <gradient
                        android:angle="270"
                        android:startColor="#1E88E5"
                        android:endColor="#1976D2"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Tampilan Normal -->
    <item>
        <drawable android:drawable="@drawable/btn_3d_background"/>
    </item>
</selector>
